<%- layout("/layouts/boilerplate.ejs") %>
<h1 class="col-6 offset-3 mt-2">SignUp for Wanderlust</h1>
<div class="row mt-3">
    <div class="col-6 offset-3">
      <form method="POST" action="/signup" class="needs-validation" novalidate>
           <div class="mb-3 ">
               <label for="username" class="form-label"> Username </label>
               <input name="username"  type="text" class="form-control" id="username" required />
               <div class="valid-feedback"> looks good</div>
           </div>
           <div class="mb-3 ">
               <label for="email" class="form-label"> Email </label>
               <input name="email"   placeholder="for eg - name@email.com" type="email" class="form-control" id="email" required />
           </div>
           <div class="mb-3 ">
               <label for="password" class="form-label"> Password </label>
               <input name="password"  type="password" class="form-control" id="password" required />
           </div>
           <button class="btn btn-success"> SignUp </button>
      </form>
    </div>
</div>